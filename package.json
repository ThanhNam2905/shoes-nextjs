{
  "name": "product-ui",
  "version": "0.1.0",
  "description": "A starting project Products by NextJS with TypeScript and TailwindCSS",
  "private": true,
  "author": "thanhnam290596@gmail.com",
  "scripts": {
    "dev": "next dev",
    "start": "npm run serve",
    "build": "npm run build-ts && npm run lint && next:build",
    "watch-ts": "tsc -w",
    "build-ts": "tsc",
    "build-css": "tailwindcss build styles/styles.css -o public/assets/css/style.css",
    "serve-debug": "nodemon --inspect dist/server.js",
    "watch-debug": "concurrently -k -p \"[{name}]\" -n \"Sass,TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\" \"npm run watch-ts\" \"npm run serve-debug\""
  },
  "dependencies": {
    "mongoose": "^5.12.4",
    "next": "10.1.2",
    "nodemon": "^2.0.7",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "react-spring": "^9.0.0-rc.3"
  },
  "devDependencies": {
    "@headlessui/react": "^1.2.0",
    "@tailwindcss/aspect-ratio": "^0.2.0",
    "@types/react": "^17.0.3",
    "antd": "^4.15.6",
    "aos": "^2.3.4",
    "autoprefixer": "^10.2.5",
    "bcrypt": "^5.0.1",
    "js-cookie": "^2.2.1",
    "jsonwebtoken": "^8.5.1",
    "next-seo": "^4.23.0",
    "postcss": "^8.2.9",
    "react-icons": "^4.2.0",
    "react-image-magnify": "^2.7.4",
    "react-props": "0.0.3",
    "react-toast-notifications": "^2.4.3",
    "react-use": "^17.2.1",
    "styled-components": "^5.2.3",
    "swiper": "^6.5.3",
    "tailwindcss": "^2.0.4",
    "typescript": "^4.2.3"
  }
}
